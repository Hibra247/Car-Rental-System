class Car{

private:

int cardID;
string brand;
int model;
int rental_price;

public:
Car(){}
Car(int _cardID,string _brand, int _model, int _rental_price): cardID(_cardID),brand(_brand),model(_model),rental_price(_rental_price){};

void setDetail(int _cardID,string _brand, int _model, int _rental_price){
    cardID=_cardID;
    brand=_brand;
    model=_model;
    rental_price=_rental_price;
}
int getId(){return cardID;};
string getBrand(){return brand;};
int getModel(){return model;};
int getRentalPrice(){return rental_price;};

void display(){
   //rewrite the display that using forloop display eac array element
}
double calcPrice(int day){
    double price=rental_price * day;
    return price;
}
};

class User{
	protected:
		string username;
		string password;

	public:	
	User(string u,string p) : username(u),password(p) {}
	string getusername(){
		return username;
	}
	string getpassword(){
		return password;
	}
	void storeinfo(){
		 ofstream outFile("customer_info.txt", ios::app); // Open file in append mode
        if (outFile.is_open()) {
            outFile << "Username: " << username << ", Password: " << password << endl;
            outFile.close();
            cout << "User information stored in customer_info.txt" << endl;
        } else {
            cerr << "Unable to open file!" << endl;
        }
	}
	
};
class Customer : protected User{
	
};
class BookingManager: protected User,//public Car
{
	
};

